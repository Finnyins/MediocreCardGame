<Window x:Name="FRM_Debug" x:Class="Project24.WIN_Debug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project24"
        mc:Ignorable="d"
        Title="Debug" Height="450" Width="800" Background="Black" Foreground="White" Visibility="Hidden" Focusable="False" IsTabStop="False" ToolTip="Debug Window">
