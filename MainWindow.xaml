        <Canvas x:Name="CNV_GameSelect" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="852" Visibility="Hidden" IsEnabled="False">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF656565" Offset="0"/>
                    <GradientStop Color="#FFE0E0E0" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Label x:Name="LBL_Title1" Content="Select Game Mode" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="72" Width="832" Canvas.Left="10" Background="#00000000"/>
            <Button x:Name="BTN_Classic" Content="Classic" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Canvas.Left="237" Canvas.Top="201" RenderTransformOrigin="0.5,0.5" ToolTip="The standard experience.&#xA;Both players use their own standard 52-card deck" Click="BTN_Classic_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_SharedDeck" Content="Shared" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Canvas.Left="376" Canvas.Top="201" RenderTransformOrigin="0.5,0.5" ToolTip="A more randomized experience.&#xA;Both players draw from the same standard 52-card deck" Click="BTN_SharedDeck_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_Back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Canvas.Left="515" Canvas.Top="201" RenderTransformOrigin="0.5,0.5" ToolTip="Click to go back to the main menu" Click="BTN_Back_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Canvas>
        <Canvas x:Name="CNV_Stats" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="852" Visibility="Hidden" IsEnabled="False">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF656565" Offset="0"/>
                    <GradientStop Color="#FFE0E0E0" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Button x:Name="BTN_BackToMenu" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Canvas.Left="372" Canvas.Top="330" RenderTransformOrigin="0.5,0.5" ToolTip="Click to go back to the main menu" Click="BTN_Back_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="LBL_StatsTitle" Content="Stats" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="72" Width="832" Canvas.Left="10" Background="#00000000"/>
            <Label x:Name="LBL_Wins" Content="Wins" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="226" Background="#00000000" Canvas.Top="111" Canvas.Left="231"/>
            <Label x:Name="LBL_Classic" Content="Classic:" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="182" Background="#00000000" Canvas.Top="174"/>
            <Label x:Name="LBL_Game" Content="Game Mode" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="226" Background="#00000000" Canvas.Top="111"/>
            <Label x:Name="LBL_Losses" Content="Losses" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="191" Background="#00000000" Canvas.Top="111" Canvas.Left="462"/>
            <Label x:Name="LBL_Ties" Content="Ties" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="184" Background="#00000000" Canvas.Top="111" Canvas.Left="658"/>
            <Label x:Name="LBL_Shared" Content="Shared:" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="182" Background="#00000000" Canvas.Top="232"/>
            <Label x:Name="LBL_ClassWin" Content="0" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="226" Background="#00000000" Canvas.Top="174" Canvas.Left="231"/>
            <Label x:Name="LBL_ClassLoss" Content="0" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="196" Background="#00000000" Canvas.Top="174" Canvas.Left="457"/>
            <Label x:Name="LBL_ClassTies" Content="0" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="184" Background="#00000000" Canvas.Top="174" Canvas.Left="658"/>
            <Label x:Name="LBL_ShareWin" Content="0" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="226" Background="#00000000" Canvas.Top="232" Canvas.Left="231"/>
            <Label x:Name="LBL_ShareLoss" Content="0" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="196" Background="#00000000" Canvas.Top="232" Canvas.Left="458"/>
            <Label x:Name="LBL_ShareTie" Content="0" HorizontalContentAlignment="Center" FontFamily="Algerian" FontSize="36" Width="184" Background="#00000000" Canvas.Top="232" Canvas.Left="658"/>
        </Canvas>

    </Grid>
</Window>
