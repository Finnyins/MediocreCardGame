<Window x:Name="FRM_Main" x:Class="Project24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project24"
        mc:Ignorable="d"
        Title="CardsGame" Height="508.908" Width="855.854" MinWidth="855.854" MinHeight="508.908" SizeToContent="WidthAndHeight">
    <Grid x:Name="GRD_Main" SizeChanged="GRD_Main_SizeChanged" RenderTransformOrigin="0.5,0.5" Height="480" MinWidth="852" MinHeight="480" Margin="0,0,3.6,-0.8">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid x:Name="GRD_Play" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="619.766"/>
                <ColumnDefinition Width="232.234"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Rectangle x:Name="RCT_Deck" Fill="#FF484848" Stroke="Black" Margin="122.234,238,10,101.8" Grid.Column="1"/>
            <Rectangle x:Name="RCT_Edeck" Fill="#FF484848" Stroke="Black" Margin="10,90,509.766,250.8"/>
            <Rectangle x:Name="RCT_EcardI" Fill="#FF484848" Stroke="Black" Margin="117,10,402.766,330.8"/>
            <Rectangle x:Name="RCT_EcardII" Fill="#FF484848" Stroke="Black" Margin="246,10,273.766,330.8"/>
            <Rectangle x:Name="RCT_EcardIII" Fill="#FF484848" Stroke="Black" Margin="377,10,142.766,330.8"/>
            <Rectangle x:Name="RCT_EcardIV" Fill="#FF484848" Stroke="Black" Margin="508,10,11.766,330.8"/>
            <Rectangle x:Name="RCT_EcardV" Fill="#FF484848" Stroke="Black" Margin="14.234,10,118,330.8" Grid.Column="1"/>
            <Label x:Name="LBL_Who" Content="Your" FontFamily="Algerian" FontSize="36" Margin="3,333,515.766,89.8"/>
            <Label x:Name="LBL_Turn" Content="Turn" FontFamily="Algerian" FontSize="36" Margin="3,390,518.766,31.8"/>
            <Grid x:Name="GRD_Playcard" Margin="377,167,143,175.8">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FFA5A5A5" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Label x:Name="LBL_Playcard" Content="wild" Background="{x:Null}" FontFamily="Algerian" FontSize="16" Margin="27,55,26,51" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Visibility="Hidden"/>
            </Grid>
            <Label x:Name="LBL_Ppoint" Content="Points:" FontFamily="Algerian" FontSize="24" Margin="114,384,25,55" Grid.Column="1"/>
            <Label x:Name="LBL_EPoint" Content="Points:" FontFamily="Algerian" FontSize="24" Margin="10,10,517,428.8" Foreground="White"/>
            <Label x:Name="LBL_PlrPnt" Content="0" FontFamily="Algerian" FontSize="24" Margin="114,420,25,18.8" Grid.Column="1"/>
            <Label x:Name="LBL_CPUPnts" Content="0" FontFamily="Algerian" FontSize="24" Margin="8,43,519,395.8" Foreground="White"/>
            <Button x:Name="BTN_CardV" Content="CardV" Grid.Column="1" HorizontalAlignment="Left" Margin="14,322,0,0" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Click="CardClick">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_CardIV" Content="CardIV" HorizontalAlignment="Left" Margin="508,322,0,0" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Click="CardClick">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_CardIII" Content="CardIII" HorizontalAlignment="Left" Margin="377,322,0,0" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Click="CardClick">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_CardII" Content="CardII" HorizontalAlignment="Left" Margin="246,322,0,0" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Click="CardClick">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_CardI" Content="CardI" HorizontalAlignment="Left" Margin="117,322,0,0" VerticalAlignment="Top" Width="100" Height="140" FontFamily="Algerian" FontSize="24" Click="CardClick">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF666666" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</Window>
